@{
    ViewData["Title"] = "ForgotPasswordConfirmation";
}

<h1 class="page-title">Şifre Sıfırlama İsteği Alındı</h1>

<div class="confirmation-container">
    <h2>Şifre Sıfırlama İsteği Alındı</h2>
    <p>Şifre sıfırlama bağlantısı e-posta adresinize gönderildi. Lütfen gelen kutunuzu kontrol edin.</p>
</div>

<style>
    /* Sayfa genel stili */
    body {
        background-color: #9be6c5; /* Açık su yeşili tonunda arka plan */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Başlık stil */
    .page-title {
        text-align: center;
        color: #00695c; /* Koyu su yeşili başlık */
        font-size: 2.5rem;
        margin-top: 30px;
    }

    .confirmation-container {
        max-width: 500px;
        margin: 10% auto;
        padding: 30px;
        background-color: #ffffff; /* Beyaz kutu */
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .confirmation-container h2 {
            font-size: 2rem;
            color: #00695c; /* Koyu su yeşili başlık */
            margin-bottom: 20px;
        }

        .confirmation-container p {
            font-size: 1.1rem;
            color: #00695c; /* Koyu su yeşili yazı */
            margin-bottom: 20px;
        }

    .btn-custom {
        background-color: #00695c; /* Koyu su yeşili buton */
        color: #fff;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        border: none;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

        .btn-custom:hover {
            background-color: #004d40; /* Daha koyu su yeşili */
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
        }
</style>
