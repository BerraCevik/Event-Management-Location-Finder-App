@{
    ViewData["Title"] = "ResetPassword";
}

<h1 class="page-title">Şifre Sıfırlama</h1>

@model Yazlab_2.Models.ViewModel.ResetPasswordViewModel

<div class="reset-password-container">
    <h2>Yeni Şifrenizi Belirleyin</h2>
    <form asp-action="ResetPassword" method="post">
        <input type="hidden" name="Token" value="@Model.Token" />
        <input type="hidden" name="Email" value="@Model.Email" />

        <div class="form-group">
            <label for="Password">Yeni Şifre</label>
            <input type="password" class="form-control" id="Password" name="Password" required />
        </div>

        <div class="form-group">
            <label for="ConfirmPassword">Yeni Şifre Tekrar</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" required />
        </div>

        <button type="submit" class="btn-custom">Şifreyi Sıfırla</button>
    </form>
</div>

<style>
    /* Sayfa genel stili */
    body {
        background-color: #9be6c5; /* Açık su yeşili tonunda arka plan */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    /* Başlık stili */
    .page-title {
        text-align: center;
        color: #00695c; /* Koyu su yeşili başlık */
        font-size: 2.5rem;
        margin-top: 30px;
    }

    .reset-password-container {
        max-width: 500px;
        margin: 10% auto;
        padding: 30px;
        background-color: #ffffff; /* Beyaz kutu */
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .reset-password-container h2 {
            font-size: 2rem;
            color: #00695c; /* Koyu su yeşili başlık */
            margin-bottom: 20px;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: bold;
            color: #00695c;
            display: block;
        }

    .form-control {
        border: 1px solid #00695c;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
        font-size: 1rem;
    }

    .btn-custom {
        background-color: #00695c; /* Koyu su yeşili buton */
        color: #fff;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        border: none;
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

        .btn-custom:hover {
            background-color: #004d40; /* Daha koyu su yeşili */
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
        }
</style>
