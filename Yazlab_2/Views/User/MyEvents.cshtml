@model IEnumerable<Yazlab_2.Models.EntityBase.Etkinlik>

<div class="container mt-4">
    <h2 class="mb-4 text-su-yesili text-center" style="font-family: 'Poppins', sans-serif; font-weight: 600;">Oluşturduğum Etkinlikler</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Henüz bir etkinlik oluşturmadınız.
            <a asp-action="Create" asp-controller="Etkinlik" class="btn btn-sm btn-su-yesili ms-2">Etkinlik Oluştur</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm rounded">
                <thead class="table-su-yesili">
                    <tr>
                        <th>Etkinlik Adı</th>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Konum</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var etkinlik in Model)
                    {
                        <tr>
                            <td class="text-truncate" style="max-width: 200px; font-family: 'Poppins', sans-serif;">@etkinlik.EtkinlikAdi</td>
                            <td style="font-family: 'Poppins', sans-serif;">@etkinlik.Tarih.ToString("dd.MM.yyyy")</td>
                            <td style="font-family: 'Poppins', sans-serif;">@etkinlik.Saat</td>
                            <td class="text-truncate" style="max-width: 150px; font-family: 'Poppins', sans-serif;">@etkinlik.Konum</td>
                            <td>
                                <a asp-action="Edit" asp-controller="Etkinlik" asp-route-id="@etkinlik.ID" class="btn btn-sm btn-outline-su-yesili">
                                    <i class="bi bi-eye"></i> Görüntüle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- CSS -->
<style>
    body {
        background-color: #eaf6f1; /* Canlı, hafif su yeşili arka plan */
        font-family: 'Poppins', sans-serif;
    }

    .table {
        border-collapse: separate;
        border-spacing: 0 0.5rem;
    }

        .table th, .table td {
            vertical-align: middle;
            padding: 15px;
            font-size: 1rem;
            color: #333;
        }

        .table th {
            font-weight: bold;
            background-color: #e6f7f1;
            color: #3baf97; /* Daha canlı su yeşili */
            font-size: 1.1rem;
        }

    .table-su-yesili {
        background-color: #e6f7f1;
        color: #3baf97; /* Daha koyu, canlı su yeşili */
    }

    .table-hover tbody tr:hover {
        background-color: rgba(86, 194, 163, 0.3); /* Hover efekti daha belirgin */
    }

    .alert {
        border-radius: 10px;
        background-color: #d1f8e7;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-weight: 600;
    }

        .alert a {
            text-decoration: none;
            color: white;
        }

            .alert a:hover {
                text-decoration: underline;
            }

    .btn-su-yesili {
        background-color: #56c2a3;
        color: white;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem; /* Daha büyük buton metni */
        padding: 12px 24px;
        transition: background-color 0.3s ease;
    }

        .btn-su-yesili:hover {
            background-color: #4ea58e;
        }

    .btn-outline-su-yesili {
        color: #56c2a3;
        border-color: #56c2a3;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem; /* Daha büyük buton metni */
        padding: 10px 20px;
        transition: color 0.3s ease, border-color 0.3s ease;
    }

        .btn-outline-su-yesili:hover {
            color: white;
            background-color: #56c2a3;
            border-color: #56c2a3;
        }

    h2 {
        color: #3baf97; /* Koyu, canlı su yeşili */
        font-size: 2.5rem; /* Başlık boyutunu büyüt */
        font-weight: 700;
    }

    /* Responsive ve genellikle daha canlı bir görünüm */
    .container {
        padding: 0 20px;
    }
</style>
