@model IEnumerable<Yazlab_2.Models.EntityBase.Etkinlik>

<h2 class="text-center my-4 text-su-yesili" style="font-family: 'Poppins', sans-serif; font-weight: 600;">Tüm Etkinlikler</h2>

<div class="row">
    @foreach (var etkinlik in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg h-100">
                <!-- Resim Alanı -->
                <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden; border-radius: 10px;">
                    <img src="@(etkinlik.Foto ?? "/images/default-event.png")" class="card-img-top" alt="@etkinlik.EtkinlikAdi" style="height: 100%; width: 100%; object-fit: cover; border-radius: 10px;">
                </div>

                <!-- Kart İçeriği -->
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title text-su-yesili">@etkinlik.EtkinlikAdi</h5>
                        <p class="card-text text-su-yesili text-truncate" style="max-height: 3rem; overflow: hidden;">@etkinlik.Aciklama</p>
                        <p class="card-text text-su-yesili">
                            <small class="text-muted">
                                @etkinlik.Tarih.ToString("dd MMM yyyy") - @etkinlik.Saat.ToString(@"hh\:mm")
                            </small>
                        </p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <!-- Detay Butonu -->
                        <a href="@Url.Action("Details", "Etkinlik", new { id = etkinlik.ID })" class="btn btn-outline-su-yesili btn-sm">
                            Detaylar
                        </a>

                        <!-- Katılma Formu -->
                        <form asp-action="JoinEvent" asp-controller="User" method="post">
                            <input type="hidden" name="eventId" value="@etkinlik.ID" />
                            <button type="submit" class="btn btn-su-yesili btn-sm btn-katil">
                                Katıl
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- CSS -->
<style>
    /* Genel Kart ve Sayfa Stili */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f8f8; /* Su yeşili tonlarında arka plan */
    }

    /* Kart Tasarımı */
    .card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    /* Resim Alanı */
    .card-img-top-wrapper {
        border-bottom: 1px solid #ddd;
    }

    /* Kart İçeriği */
    .card-body {
        padding: 1.25rem;
        background-color: #fff;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #56c2a3; /* Su Yeşili */
    }

    .card-text {
        font-size: 1rem;
        color: #56c2a3; /* Su Yeşili */
    }

    /* Buton Stilleri */
    .btn-su-yesili {
        background-color: #56c2a3;
        border-color: #56c2a3;
        color: white;
        border-radius: 8px;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: 600;
    }

        .btn-su-yesili:hover {
            background-color: #4ea58e;
            border-color: #4ea58e;
        }

    .btn-outline-su-yesili {
        background-color: transparent;
        border: 1px solid #56c2a3;
        color: #56c2a3;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: 600;
    }

        .btn-outline-su-yesili:hover {
            background-color: #56c2a3;
            color: white;
        }

    /* Hover Etkisi */
    .card-body:hover {
        background-color: #f9f9f9;
    }

    /* Detaylar için özel stil */
    .card-body .card-text {
        font-weight: bold;
        color: #000;
    }

    /* Genel margin ve padding ayarları */
    .row {
        margin: 0 auto;
        max-width: 1200px;
    }

    /* Su Yeşili Tema - Başlık */
    .text-su-yesili {
        color: #56c2a3; /* Su Yeşili */
    }
</style>
